<Video>:
    allow_stretch: True
    options: {'eos':'loop'}
    play: True

<MenuAppButton>:
    background_normal: 'apps/%s/icon.png' % self.app_name
    background_down: 'apps/%s/icon_down.png' % self.app_name
    on_release: app.start_app(self.app_name)

<TopScreen>:
    background: "data/img/menu-top-bg.png"

<BottomScreen>:
    background: "data/img/menu-bottom-bg.png"


<Intro>:
    opacity: 1.0 - self.alpha_hide
    alpha_hide: 1.0 - self.alpha_show
    TopScreen:
        Video:
            source: 'data/video/1920p.ogg'
    BottomScreen:
        canvas.after:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'data/img/bottom-video-overlay.png'
        Video:
            source: 'data/video/720p.ogg'


<Menu>:
    layout: app_btn_layout

    TopScreen

    BottomScreen:
        StackLayout:
            id: app_btn_layout
            padding: 100
            size: (1920,1080)

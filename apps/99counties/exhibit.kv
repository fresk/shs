<Video>:
    allow_stretch: True
    options: {'eos':'loop'}
    play: True

<MenuAppButton>:
    source: 'apps/%s/icon.png' % self.app_name
    on_release: app.start_app(self.app_name)

<BackToMenuButton>:
    pos: 20, 900
    size: 150,150
    size_hint: None, None
    on_release: app.show_menu()
    source: 'data/img/btn-back-to-menu.png'

<TopScreen>:
    background: "data/img/menu-top-bg.png"

<BottomScreen>:
    background: "data/img/menu-bottom-bg.png"


<Intro>:
    TopScreen:
        Video:
            source: 'data/video/1920p.ogg'
        Image:
            source: 'data/img/top-video-overlay.png'

    BottomScreen:
        Video:
            size: 500,600
            pos: 0,0
            source: 'data/video/720p.ogg'
        ImageButton:
            source: 'data/img/bottom-video-overlay.png'


<Menu>:
    layout: app_btn_layout

    TopScreen

    BottomScreen:
        StackLayout:
            id: app_btn_layout
            padding: 100
            size: (1920,1080)









<H1>:
    color: 0,0,0,1
    font_size: 72
    text_size: self.size
    size_hint: 1, None
    halign: 'left'


<H2>:
    font_size: 48
    color: 0,0,0,1
    size_hint: 1, None
    text_size: self.size
    halign: 'left'
    valign: 'top'

<Paragraph>:
    font_size: 30
    color: 0,0,0,1
    top: 1080 -15 -50
    x: 100
    text_size: self.size
    size_hint: None,1
    width: 900
    halign: 'left'
    valign: 'top'

<FactLabel>:
    text_size: self.size
    markup: True
    height:40
    size_hint: 1, None
    font_size: 30
    color: 0,0,0,1
    halign: 'left'
    valign: 'top'


<FactDetail>:
    font_size: 30
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'
    valign: 'top'





<HSDetails>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/map/itembg.png'

        Rectangle:
            pos: self.pos
            size: self.size
            source: self.data.get('bgimage', 'data/img/trans.png')

<MedalDetails>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/map/itembg.png'


<HollywoodDetails>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/map/itembg.png'





<HSDetails>:
    #    source: root.data.get('bgimage', "data/img/trans.png")

    BoxLayout:
        orientation: 'vertical'
        padding: 100

        H1:
            text: root.data.get('title') or ""

        H2:
            text: (root.data.get('address') or "")

        Widget
            size_hint: 1, None
            height: 10

        Paragraph:
            text: unicode(root.data.get('description') or "")

    Label:
        color: 1,1,1,1
        text:''



<HollywoodDetails>:

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            size_hint: 0.6, 1
            orientation: 'vertical'
            padding: 120
            H1:
                text: root.data.get('title')
            H2:
                text: root.data.get('occupation') if root.data.get('occupation') else ""
            Widget
                size_hint: 1, None
                height: 10
            Paragraph:
                text: unicode(root.data.get('comments') or "n/a") if root.data.get('comments') else ""


        BoxLayout:
            size_hint: 0.4, 1
            orientation: 'vertical'
            padding: 120
            spacing: 0

            Image:
                size_hint: None, None
                size: 512, 512
                source: (root.data.get('image') or {'medium': 'data/img/avatar.png'})['medium']

            FactLabel:
                text: "[b]Born:[/b] %s" % (root.data.get('year_born') or "n/a") if root.data.get('year_born') else ""
            FactLabel:
                text: "[b]Died:[/b] %s" % (root.data.get('year_died') or "n/a") if root.data.get('year_died') else ""

            Widget:
                size_hint: 1, None
                height: 25

            FactLabel:
                text: "[b]Hometown:[/b] %s" % (root.data.get('hometown') or "n/a") if root.data.get('hometown') else "[b]Hometown:[/b] %s" % (root.data.get('hometown_alt') or "n/a")

            Widget:
                size_hint: 1, None
                height: 25

            FactLabel:
                text: "[b]Iowa Connection:[/b]" if root.data.get('iowa_connection') else ""

            FactDetail:
                text: unicode(root.data.get('iowa_connection') or "n/a")  if root.data.get('iowa_connection') else ""

            Widget:
                size_hint: 1,1


<MedalDetails>:

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            size_hint: 0.6, 1
            orientation: 'vertical'
            padding: 120
            H1:
                text: root.data.get('title')
            H2:
                text: root.data.get('war') or ""
            Paragraph:
                markup: True
                text: "[b][i]Official Citation:[/i][/b]\n%s" % unicode(root.data.get('official_citation') or "n/a") if root.data.get('official_citation') else ""


        BoxLayout:
            size_hint: 0.4, 1
            orientation: 'vertical'
            padding: 120
            spacing: 0

            Widget:
                size_hint: 1, 1
                height: 100

            FactLabel:
                text: "[b]Infantry:[/b] %s" % (root.data.get('infantry') or "n/a") if root.data.get('infantry') else ""
            FactLabel:
                text: "[b]Rank:[/b] %s" % (root.data.get('rank') or "n/a") if root.data.get('rank') else ""

            Widget:
                size_hint: 1, 1
                height: 20

            FactLabel:
                text: "[b]Act of Valor:[/b] " if root.data.get('act_of_valor') else ""
            FactDetail:
                text: (root.data.get('act_of_valor') or "n/a") if root.data.get('act_of_valor') else ""
                height: self.texture_size[0]

            Widget:
                size_hint: 1, 1
                height: 20

            FactLabel:
                text: "[b]Date & Place of Action:[/b]" if root.data.get('action_dateplace') else ""

            FactDetail:
                text: (root.data.get('action_dateplace') or 'n/a') if root.data.get('action_dateplace') else ""
                height: self.texture_size[0]

            Widget:
                size_hint: 1, 1
                height: 20






    Label:
        color: 1,1,1,1
        text:''

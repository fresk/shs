<Video>:
    allow_stretch: True
    options: {'eos':'loop'}
    play: True

<MenuAppButton>:
    source: 'apps/%s/icon.png' % self.app_name
    on_release: app.start_app(self.app_name)

<BackToMenuButton>:
    y: 1080 - self.height
    on_release: app.show_menu()
    source: 'data/img/btn-back-to-menu.png'

<TopScreen>:
    background: "data/img/menu-top-bg.png"

<BottomScreen>:
    background: "data/img/menu-bottom-bg.png"


<Intro>:
    TopScreen:
        Video:
            source: 'data/video/1920p.ogg'
        Image:
            source: 'data/img/top-video-overlay.png'

    BottomScreen:
        Video:
            size: 500,600
            pos: 0,0
            source: 'data/video/720p.ogg'
        ImageButton:
            background_normal: 'data/img/bottom-video-overlay.png'
            background_down: 'data/img/bottom-video-overlay.png'


<Menu>:
    layout: app_btn_layout

    TopScreen

    BottomScreen:
        StackLayout:
            id: app_btn_layout
            padding: 100
            size: (1920,1080)

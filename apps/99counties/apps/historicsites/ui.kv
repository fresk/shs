DualDisplay:

    TopScreen:
    	background: 'apps/historicsites/bg-top.png'

        DetailView:
            selection: map.selection

    BottomScreen:
    	background: 'apps/historicsites/bg-bottom.png'
        SHSMap:
            id: map

        BackToMenuButton:




<H1>:
    color: 0,0,0,1
    font_size: 72
    text_size: self.size
    size_hint: 1, None
    halign: 'left'


<H2>:
    font_size: 48
    color: 0,0,0,1
    size_hint: 1, None
    text_size: self.size
    halign: 'left'
    valign: 'top'

<Paragraph>:
    font_size: 30
    color: 0,0,0,1
    top: 1080 -15 -50
    x: 100
    text_size: self.size
    size_hint: None,1
    width: 900
    halign: 'left'
    valign: 'top'

<FactLabel>:
    text_size: self.size
    markup: True
    height:40
    size_hint: 1, None
    font_size: 30
    color: 0,0,0,1
    halign: 'left'
    valign: 'top'


<FactDetail>:
    font_size: 30
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'
    valign: 'top'


<HSDetails>:
    Image:
        source: "data/map/itembg.png"
    Image:
        source: root.data.get('bgimage', "data/img/trans.png")

    BoxLayout:
        orientation: 'vertical'
        padding: 120

        H1:
            text: root.data.get('title')

        H2:
            text: root.data.get('address').replace("<br/>", "\n").replace("<br />", "")

        Widget
            size_hint: 1, None
            height: 10

        Paragraph:
            text: unicode(root.data.get('description') or "n/a").replace("<br/>", "\n").replace("<br />", "")

    Label:
        color: 1,1,1,1
        text:''



<HollywoodDetails>:

    Image:
        source: "data/map/itembg.png"
    #Image:
    #    source: root.data.get('bgimage', "data/img/trans.png")

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            size_hint: 0.6, 1
            orientation: 'vertical'
            padding: 120
            H1:
                text: root.data.get('title')
            H2:
                text: root.data.get('occupation').replace("<br/>", "\n").replace("<br />", "")
            Widget
                size_hint: 1, None
                height: 10
            Paragraph:
                text: unicode(root.data.get('comments') or "n/a").replace("<br/>", "\n").replace("<br />", "")


        BoxLayout:
            size_hint: 0.4, 1
            orientation: 'vertical'
            padding: 120
            spacing: 0


            FactLabel:
                text: "[b]Born:[/b] %s" % (root.data.get('year_born') or "n/a").replace("<br/>", "\n").replace("<br />", "")
            FactLabel:
                text: "[b]Died:[/b] %s" % (root.data.get('year_died') or "n/a").replace("<br/>", "\n").replace("<br />", "")

            Widget:
                size_hint: 1, None
                height: 50

            FactLabel:
                text: "[b]Hometown:[/b] %s" % (root.data.get('hometown') or "n/a").replace("<br/>", "\n").replace("<br />", "")

            Widget:
                size_hint: 1, None
                height: 50

            FactLabel:
                text: "[b]Iowa Connection:[/b]"
            FactDetail:
                text: unicode(root.data.get('iowa_connection') or "n/a").replace("<br/>", "\n").replace("<br />", "")

            Widget:
                size_hint: 1,1


<MedalDetails>:
    Image:
        source: "data/map/itembg.png"
    #Image:
    #    source: root.data.get('bgimage', "data/img/trans.png")

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            size_hint: 0.6, 1
            orientation: 'vertical'
            padding: 120
            H1:
                text: root.data.get('title')
            H2:
                text: root.data.get('war') or ""
            Paragraph:
                markup: True
                text: "[b][i]Official Citation:[/i][/b]\n%s" % unicode(root.data.get('official_citation') or "n/a").replace("<br/>", "\n").replace("<br />", "")


        BoxLayout:
            size_hint: 0.4, 1
            orientation: 'vertical'
            padding: 120
            spacing: 0

            Widget:
                size_hint: 1, 1
                height: 100

            FactLabel:
                text: "[b]Infantry:[/b] %s" % (root.data.get('infantry') or "n/a").replace("<br/>", "\n").replace("<br />", "")
            FactLabel:
                text: "[b]Rank:[/b] %s" % (root.data.get('rank') or "n/a").replace("<br/>", "\n").replace("<br />", "")

            Widget:
                size_hint: 1, 1
                height: 20

            FactLabel:
                text: "[b]Act of Valor:[/b] "
            FactDetail:
                text: (root.data.get('act_of_valor') or "n/a").replace("<br/>", "\n").replace("<br />", "")
                height: self.texture_size[0]

            Widget:
                size_hint: 1, 1
                height: 20

            FactLabel:
                text: "[b]Date & Place of Action:[/b]"
            FactDetail:
                text: (root.data.get('action_dateplace') or 'n/a').replace("<br/>", "\n").replace("<br />", "")
                height: self.texture_size[0]

            Widget:
                size_hint: 1, 1
                height: 20






    Label:
        color: 1,1,1,1
        text:''

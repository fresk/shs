
<ScratchBackButton>:
    y: 1080 - self.height
    source: 'apps/scratch/back.png'
    on_release: self.display.show_menu()


ScratchDualDisplay
    id: display
    menu: menu_layout

    TopScreen:
        background: 'apps/scratch/s-bg-top.png'

    BottomScreen:
        id: bottom_screen
        background: 'apps/scratch/s-bg-bottom.png'

        HistoryScratchMenu:
            id: menu_layout
            spacing: 20
            padding: 100
            display: display
            Widget:
                size_hint: None, None
                height: 100
                width: root.width-(menu_layout.padding*2)

        BackToMenuButton



<CountyListButton>:
    text: self.data.get("title")
    size_hint_y: None
    height: 80
    font_name: "fonts/Gotham-Black.ttf" if self.state=='down' else "fonts/Gotham-Book.ttf"
    font_size: 47 if self.state=='down' else 45
    text_size: 400,80
    halign: 'left'
    valign: 'middle'
    background_normal: "data/img/trans.png"
    background_down: "data/img/trans.png"
    group: 'countylist'


<CountyList>:
    scroll_layer: scroll_layer
    item_list: item_list


    StencilView:
        size_hint:None, None
        size: root.size
        pos: root.pos

        TransformLayer:
            id: scroll_layer
            size_hint:None, None
            size: root.size
            pos: root.pos

            GridLayout:
                id: item_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height





<CountyHeader>:
    Label:
        text: root.text
        id: name_label
        color: 0,0,0,1
        font_size: 130
        font_name: "fonts/Gotham-Bold.ttf"
        size: self.texture_size
        pos: 0,780
    Label:
        color: 0,0,0,1
        text: "COUNTY"
        font_size: 80
        font_name: "fonts/Gotham-Book.ttf"
        size: self.texture_size
        pos: name_label.width+ 25,790

<FactTitle>:
    color: 0,0,0,1
    font_size: 46
    font_name: "fonts/Gotham-Bold.ttf"
    size_hint_x: None
    text_size: self.width, self.height
    halign:'left'
    valign: 'middle'
    width: 350

<FactText>:
    color: 0,0,0,1
    font_size: 46
    text_size: self.width, self.height
    halign:'left'
    valign: 'middle'
    font_name: "fonts/Gotham-Book.ttf"




<CountyInfoWiki>:
    BoxLayout:
        padding: 100
        orientation: 'vertical'
        RelativeLayout:
            Widget:

                canvas:
                    Color:
                        rgba: 1,1,1,0.0
                    Rectangle:
                        pos: 0,300
                        size: 400,400

                CountyHeader:
                    text: root.county_name

                CountyModel:
                    selected_county: root.selected_county
                    size: 400,400
                    pos: 0, 300

                GridLayout:
                    cols: 2
                    size: 1200,400
                    pos: 500, 300

                    FactTitle:
                        text: "County Seat: "
                    FactText:
                        text: root.county_seat

                    FactTitle:
                        text: "County Size: "
                    FactText:
                        text: root.county_size

                    FactTitle:
                        text: "Population: "
                    FactText:
                        text: root.population

                    FactTitle:
                        text: "Established: "
                    FactText:
                        text: root.established


                GridLayout:
                    cols: 2
                    size: 1800,250
                    pos: 0, -50

                    FactTitle:
                        text: "Established From: "
                        width: 500
                        valign: 'top'
                    FactText:
                        text: root.formed_from
                        valign: 'top'

                    FactTitle:
                        text: "Etymology: "
                        width: 500
                        valign: 'top'
                    FactText:
                        text: root.etymology
                        valign: 'top'



WikiDisplay
    id: wiki
    county_list: county_list
    county_map: county_map
    county_info: county_info


    TopScreen:
        background: 'apps/countywiki/bg-top.png'

        CountyInfoWiki:
            id: county_info
            selected_county: root.selected_county
            display: root
            size_hint:1,1


    BottomScreen:
        id: bottom_screen
        background: 'apps/countywiki/bg-bottom.png'

        Image:
            source: 'apps/countywiki/bg-bottom.png'

        BackToMenuButton:
            y: 1080 - self.height

        CountyMap:
            selected_county: root.selected_county
            display: root
            id: county_map
            size_hint: None, None
            size: 1920-400,1080

        CountyList:
            selected_county: root.selected_county
            display: root
            id: county_list
            size_hint:None, None
            size: 400,1080
            x: 1920-400





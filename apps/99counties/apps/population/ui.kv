<Slider>:
    size: slider_track.size
    size_hint: None, None

    canvas:
        Clear

    Image:
        id: slider_track
        size_hint: None, None
        pos: (root.x, root.y)
        size: self.texture_size
        center: root.center
        source: 'slider-track.png'
    Image:
        source: 'slider-handle.png'
        size: self.texture_size
        center: (root.value_pos[0] , root.center_y)





DualDisplay

    TopScreen:
        background: 'pop-bg-top.png'

        Renderer:
            id: renderer
            slider_val: str(int(slider.value)/10 * 10)
            size_hint: 1,1
        Label:
            size_hint: 1,None
            font_size: 80
            y: 1840
            text: str(int(slider.value)/10 * 10)

    BottomScreen:
        background: 'bg-bottom.png'

        BackToMenuButton:
            y: 1080 - self.height
            background_normal: 'btn-back-to-menu.png'
            background_down: 'btn-back-to-menu_down.png'




        Slider:
            id: slider
            center: self.parent.center if self.parent else (0,0)
            range: 1900, 1990
            value: 1900

